@model IEnumerable<PetFinder.Models.Mascota>

@{
    ViewData["Title"] = "MisMascota";
}

<h4>Mis Mascotas</h4>
<div class="row tamanioLetra">
    <div class="col-12 col-md-10">
        <table class="table table-info">
            <thead>
                <tr>
                    <th>
                        Foto
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Raza)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Edad)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="foto_mascota">
                            <img src="~/imagenesUsuarios/@item.Foto" width="60">
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreMascota)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Raza)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Edad)
                        </td>
                        <td>
                            @Html.ActionLink("Ver +", "Details", new { id = item.MascotaId})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>