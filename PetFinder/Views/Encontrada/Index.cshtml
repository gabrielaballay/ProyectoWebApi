@model IEnumerable<PetFinder.Models.Encontrada>

@{
    ViewData["Title"] = "Mascotas Encontradas";
}

<h4>Mascotas Encontradas</h4>
<div class="row">
    <div class="col-12">
        <table class="table table-success">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.Imagen)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Lugar)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td class="foto_mascota">
                            <img src="~/imagenesUsuarios/encontradas/@item.Imagen" width="60">
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Lugar)
                        </td>

                        <td style="width:80px;">
                            @Html.ActionLink("Ver +" +
                           "", "Details", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>     
</div>
