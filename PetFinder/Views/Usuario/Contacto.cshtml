@model PetFinder.Models.ContactoViewModel


<div class="row">
    <div class="col-md-4">
        <p>A traves de este formulario nos puede dejar sus consultas, sugerencias y cualquier otro tema que ud. necesite plantearnos.</p>
        <hr />
        <h4>Formulario de Contacto</h4>
        <hr />
        <span style="color:red;">@ViewBag.mensaje</span>
        <form asp-action="Contacto" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Correo" class="control-label"></label>
                <input asp-for="Correo" value="@ViewBag.user" class="form-control" readonly />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asunto" class="control-label"></label>
                <input asp-for="Asunto" class="form-control" required />
                <span asp-validation-for="Asunto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mensaje" class="control-label"></label>
                <textarea asp-for="Mensaje" class="form-control" required></textarea>
                <span asp-validation-for="Mensaje" class="text-danger"></span>
            </div>
            <span style="color:dodgerblue;" class="mt-2 mb-2">@ViewBag.exito</span>
            <div class="d-flex justify-content-around mb-2">
                @if (ViewBag.ok != "ok")
                {
                    <div>
                        <input type="submit" value="Enviar" class="btn btn-primary" />
                    </div>
                }
                <div>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success">Volver</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}